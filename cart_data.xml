<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_product" android:layout_width="80dp" android:layout_height="70dp" android:src="@drawable/profile_circle"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:weightSum="1">
                <TextView android:textSize="13sp" android:textStyle="bold" android:textColor="@android:color/black" android:ellipsize="end" android:id="@+id/txt_product_name" android:padding="2dp" android:layout_width="110dp" android:layout_height="match_parent" android:text="San Disk Pen Drive 32 GB" android:maxLines="2" android:layout_weight="0.8"/>
                <TextView android:textStyle="bold" android:textColor="@android:color/holo_red_dark" android:id="@+id/txt_product_price" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rs 50" android:layout_weight="0"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="3dp" android:weightSum="0.6">
                <Spinner android:scrollbarSize="30sp" android:gravity="center" android:entries="@array/count" android:id="@+id/spinner" android:layout_width="90dp" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_weight="0.2"/>
                <ImageButton android:textSize="10dp" android:id="@+id/remove" android:layout_width="wrap_content" android:layout_height="28dp" android:layout_marginTop="25dp" android:src="@drawable/ic_remove" android:tint="@color/colorPrimary" android:layout_weight="0.6" android:backgroundTint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
